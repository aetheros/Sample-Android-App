<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash activity theme -->
    <style name="AppTheme.SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- ./Splash activity theme -->

    <!-- Action bar theme -->
    <style name="AppTheme.ToolBar" parent="ThemeOverlay.AppCompat.ActionBar">
    </style>

    <!--    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">-->
    <!--        &lt;!&ndash; Customize color of navigation drawer icon and back arrow &ndash;&gt;-->
    <!--        <item name="colorControlNormal">@color/toolbar_icon</item>-->
    <!--    </style>-->

    <style name="AppTheme.ToolBar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set title size -->
        <!--  <item name="android:textSize">20dp</item> -->

        <!-- Set title color -->
        <item name="android:textColor">@color/white</item>

    </style>

    <!-- Set logo -->
    <style name="AppTheme.ToolBar.Logo">
        <item name="logo">@drawable/toolbar_logo</item>
    </style>

    <!-- ./Action bar theme -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
